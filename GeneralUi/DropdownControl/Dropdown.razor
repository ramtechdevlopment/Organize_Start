@typeparam TValue
<div class="dropdown w-100">

    <button class="btn btn-primary dropdown-toggle w-100" 
            type="button" 
            id="dropdownMenuButton"
            data-toggle="dropdown" 
            aria-haspopup="true"
            aria-expanded="false">
        @(SelectedItem == null? "please Select something": SelectedItem.Displaytext)
    </button>

    <div class="dropdown-menu" aria-label="dropdownMenuButton">
        @foreach(var item in SelectableItems)
        {
            <a class="dropdown-item" @onclick="@(() => OnItemClicked(item))"> @item.Displaytext</a>
        }
    </div>
</div>